<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="AppThemeChild">
        <item name="android:navigationBarColor">@color/backgroundNavigationBar</item>
    </style>

    <!-- Configuration buttons style -->
    <style name="ButtonConfiguration" parent="ButtonConfigurationChild">
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Screen splash style -->
    <style name="SplashTheme" parent="SplashThemeBase">
        <item name="android:navigationBarColor">@color/accent</item>
    </style>

</resources>
