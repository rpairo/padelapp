<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base UI colors -->
    <color name="primary">#fafafa</color>
    <color name="primaryDark">#e0e0e0</color>
    <color name="accent">#64b5f6</color>
    <color name="iconsEnabled">#616161</color>
    <color name="iconsDisabled">#9e9e9e</color>
    <color name="darkBackground">#eeeeee</color>
    <color name="white">#ffffff</color>

    <!-- Activity main -->
    <color name="backgroundActivityMain">@color/darkBackground</color>

    <!-- Navigation bar -->
    <color name="backgroundNavigationBar">@color/accent</color>

    <!-- Toolbar main-->
    <color name="textLevel">@color/accent</color>
    <color name="backgroundToolbar">@color/white</color>

    <!-- Bottom Navigation -->
    <color name="iconBottomNavigationEnabled">@color/iconsEnabled</color>
    <color name="iconBottomNavigationDisabled">@color/iconsDisabled</color>
    <color name="textBottomNavigationEnabled">@color/accent</color>
    <color name="textBottomNavigationDisabled">@color/iconsDisabled</color>
    <color name="hoverBottomNavigation">@color/primaryDark</color>
    <color name="backgroundBottomNavigation">@color/white</color>

    <!-- Price Bar -->
    <color name="backgroundButton">@color/accent</color>
    <color name="textButton">@color/white</color>

</resources>
