<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_bottom_cardview_blocked_players"
    android:elevation="@dimen/elegant_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_vertical_cardview_blocked_players"
        android:paddingEnd="@dimen/padding_cardview_match"
        android:paddingStart="@dimen/padding_cardview_match"
        android:paddingTop="@dimen/padding_vertical_cardview_blocked_players">

        <!-- Player image -->
        <ImageView
            android:id="@+id/image_profile_player"
            android:layout_width="@dimen/size_photo_player_blocked_players"
            android:layout_height="@dimen/size_photo_player_blocked_players"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image_player_description"
            android:scaleType="fitXY"
            android:src="@drawable/ic_profile_empty" />

        <!-- Player name -->
        <TextView
            android:id="@+id/name_profile_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_left_name_player"
            android:layout_toEndOf="@+id/image_profile_player"
            android:layout_toStartOf="@+id/unlock_button"
            android:maxLength="@integer/max_length_name"
            android:maxLines="@integer/max_lines_name"
            android:text="@string/name_player_result"
            android:textColor="@color/iconsEnabled"
            android:textSize="@dimen/text_medium_size" />

        <!-- Unlock button -->
        <TextView
            android:id="@+id/unlock_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_end_player_blocked_players"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:maxLength="@integer/max_length_name"
            android:maxLines="@integer/max_lines_name"
            android:text="@string/unlock_player_blocked_players"
            android:textColor="@color/iconsDisabled"
            android:textSize="@dimen/text_small_size" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
