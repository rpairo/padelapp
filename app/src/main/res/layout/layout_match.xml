<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_match"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_bottom_cardview_match"
    android:elevation="@dimen/elevation_cardview_match">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="@dimen/padding_cardview_match"
        android:paddingStart="@dimen/padding_cardview_match"
        android:paddingTop="@dimen/padding_cardview_match">

        <!-- Date & Time -->
        <include
            layout="@layout/layout_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Players -->
        <include
            layout="@layout/layout_players_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_players_match" />

        <!-- Separators -->
        <include
            layout="@layout/layout_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_separators_match" />

        <!-- Price Bar -->
        <include
            layout="@layout/layout_price_bar_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_price_bar" />

    </LinearLayout>
</android.support.v7.widget.CardView>
