<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/padding_horizontal_players_match"
    android:paddingStart="@dimen/padding_horizontal_players_match">

    <!-- Player one -->
    <ImageView
        android:id="@+id/profile_player_match_one"
        android:layout_width="@dimen/image_size_profile_match"
        android:layout_height="@dimen/image_size_profile_match"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/image_player_description"
        android:src="@drawable/ic_profile_empty" />

    <!-- Player two -->
    <ImageView
        android:id="@+id/profile_player_match_two"
        android:layout_width="@dimen/image_size_profile_match"
        android:layout_height="@dimen/image_size_profile_match"
        android:layout_marginStart="@dimen/margin_horizontal_profiles_match"
        android:layout_toEndOf="@+id/profile_player_match_one"
        android:contentDescription="@string/image_player_description"
        android:src="@drawable/ic_profile_empty" />

    <!-- Player three -->
    <ImageView
        android:id="@+id/profile_player_match_three"
        android:layout_width="@dimen/image_size_profile_match"
        android:layout_height="@dimen/image_size_profile_match"
        android:layout_marginStart="@dimen/margin_horizontal_profiles_match"
        android:layout_toEndOf="@+id/profile_player_match_two"
        android:contentDescription="@string/image_player_description"
        android:src="@drawable/ic_profile_empty" />

    <!-- Player four -->
    <ImageView
        android:id="@+id/profile_player_match_four"
        android:layout_width="@dimen/image_size_profile_match"
        android:layout_height="@dimen/image_size_profile_match"
        android:layout_marginStart="@dimen/margin_horizontal_profiles_match"
        android:layout_toEndOf="@+id/profile_player_match_three"
        android:contentDescription="@string/image_player_description"
        android:src="@drawable/ic_profile_empty" />

    <!-- Missing players -->
    <TextView
        android:id="@+id/amount_players_match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/profile_player_match_four"
        android:gravity="center"
        android:text="@string/amount_players_match"
        android:textSize="@dimen/text_small_size" />

</RelativeLayout>
