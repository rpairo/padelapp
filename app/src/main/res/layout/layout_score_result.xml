<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <!-- First score -->
    <FrameLayout
        android:layout_width="@dimen/size_score_results"
        android:layout_height="@dimen/size_score_results"
        android:layout_alignParentStart="true">

        <!-- First score button -->
        <include
            android:id="@+id/first_score_edit_button"
            layout="@layout/layout_score_edit_button"
            android:visibility="visible" />

        <!-- First score text -->
        <include
            android:id="@+id/first_score_text"
            layout="@layout/layout_score_text"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Second score -->
    <FrameLayout
        android:layout_width="@dimen/size_score_results"
        android:layout_height="@dimen/size_score_results"
        android:layout_centerHorizontal="true">

        <!-- Second score button -->
        <include
            android:id="@+id/second_score_edit_button"
            layout="@layout/layout_score_edit_button"
            android:visibility="visible" />

        <!-- Second score text -->
        <include
            android:id="@+id/second_score_text"
            layout="@layout/layout_score_text"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Third score -->
    <FrameLayout
        android:layout_width="@dimen/size_score_results"
        android:layout_height="@dimen/size_score_results"
        android:layout_alignParentEnd="true">

        <!-- Third score button -->
        <include
            android:id="@+id/third_score_edit_button"
            layout="@layout/layout_score_edit_button"
            android:visibility="visible" />

        <!-- Third score text -->
        <include
            android:id="@+id/third_score_text"
            layout="@layout/layout_score_text"
            android:visibility="gone" />

    </FrameLayout>
</RelativeLayout>
