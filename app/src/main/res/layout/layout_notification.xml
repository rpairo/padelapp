<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_top_information_notification"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_information_notification">

        <!-- Notification image -->
        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="@dimen/image_size_profile_result"
            android:layout_height="@dimen/image_size_profile_result"
            android:scaleType="fitXY"
            android:src="@drawable/ic_profile_empty" />

        <!-- Notification information -->
        <TextView
            android:id="@+id/information_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_information_notification"
            android:text="@string/information_notification"
            android:textSize="@dimen/text_medium_size" />

    </LinearLayout>
</android.support.v7.widget.CardView>
