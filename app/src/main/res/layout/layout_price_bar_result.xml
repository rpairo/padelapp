<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/padding_bottom_price_bar">

    <!-- Logo club -->
    <ImageView
        android:id="@+id/image_club_bar_result"
        android:layout_width="@dimen/width_image_club_price_bar"
        android:layout_height="@dimen/height_image_club_price_bar"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image_club_description"
        android:src="@drawable/ic_club_empty" />

    <!-- Prefix club -->
    <TextView
        android:id="@+id/prefix_club_bar_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_left_details_price_bar"
        android:layout_toEndOf="@+id/image_club_bar_result"
        android:text="@string/prefix_club_bar"
        android:textSize="@dimen/text_small_size" />

    <!-- Club match -->
    <TextView
        android:id="@+id/name_club_bar_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_left_text_price_bar"
        android:layout_toEndOf="@+id/prefix_club_bar_result"
        android:text="@string/name_club_bar"
        android:textSize="@dimen/text_small_size"
        android:textStyle="bold" />

    <!-- Add result button -->
    <Button
        android:id="@+id/button_add_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/backgroundButtonResults"
        android:elevation="@dimen/elegant_elevation"
        android:paddingBottom="@dimen/padding_vertical_button_bar"
        android:paddingEnd="@dimen/padding_right_button_bar"
        android:paddingStart="@dimen/padding_right_button_bar"
        android:paddingTop="@dimen/padding_vertical_button_bar"
        android:text="@string/button_bar_results"
        android:textAllCaps="false"
        android:textColor="@color/textButton"
        android:textSize="@dimen/text_medium_size"
        android:textStyle="bold" />

</RelativeLayout>
