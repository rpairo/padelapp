<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Player image -->
    <ImageView
        android:id="@+id/image_profile_player"
        android:layout_width="@dimen/image_size_profile_result"
        android:layout_height="@dimen/image_size_profile_result"
        android:scaleType="fitXY"
        android:src="@drawable/ic_profile_empty" />

    <!-- Player name -->
    <TextView
        android:id="@+id/name_profile_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_left_name_player"
        android:maxLength="@integer/max_length_name"
        android:maxLines="@integer/max_lines_name"
        android:text="@string/name_player_result"
        android:textSize="@dimen/text_medium_size" />

</LinearLayout>
